                <field>Case.CoIT_Management_Type__c</field>
                <operation>notEqual</operation>
                <value>Gestión Automatica</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.CoIT_Management_Type__c</field>
                <operation>notEqual</operation>
                <value>Gestión Automatica PoC</value>
            </criteriaItems>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>CoIT_Low_Medium_Impact_Agents</assignedTo>
            <assignedToType>Queue</assignedToType>
