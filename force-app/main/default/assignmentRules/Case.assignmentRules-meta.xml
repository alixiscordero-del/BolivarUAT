            <assignedTo>CoIT_High_Impact_Agents</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Case.CoIT_Click_Severity__c</field>
                <operation>equals</operation>
                <value>Alto Impacto: 20 o más días</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>Hogares</value>
            </criteriaItems>
