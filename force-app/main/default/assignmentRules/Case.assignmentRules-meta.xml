                <field>Case.CoIT_Click_Severity__c</field>
                <operation>equals</operation>
                <value>Bajo Impacto: 0 - 1 día,Bajo Impacto: 0 - 3 días,Bajo Impacto: 0 - 5 días,Moderado: 6 - 19 días</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>Hogares</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.CoIT_Management_Type__c</field>
                <operation>notEqual</operation>
                <value>Gestión Automatica</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.CoIT_Management_Type__c</field>
                <operation>notEqual</operation>
                <value>Gestión Automatica PoC</value>
            </criteriaItems>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>Agendamiento</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Case.CoIT_Management_Type__c</field>
                <operation>equals</operation>
                <value>Agendamiento</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.CoIT_Impacto__c</field>
                <operation>notEqual</operation>
                <value>Alto,Medio,Bajo</value>
            </criteriaItems>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>Alertamientos</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Case.CoIT_Management_Type__c</field>
                <operation>equals</operation>
                <value>Alertamientos</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.CoIT_Impacto__c</field>
                <operation>notEqual</operation>
                <value>Alto,Medio,Bajo</value>
            </criteriaItems>
        </ruleEntry>
