        <defaultConnector>
            <targetReference>Add_a_first_single_value_to_the_list</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>IsBlank_Outcome</name>
