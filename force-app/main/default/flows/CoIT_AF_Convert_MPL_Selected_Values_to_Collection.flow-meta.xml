        <scale>0</scale>
    </formulas>
    <formulas>
        <name>SingleSelectedValueFormula</name>
        <dataType>String</dataType>
        <expression>TRIM(SUBSTITUTE(LEFT( {!SelectedValues} , FIND(&quot;;&quot;,  {!SelectedValues} )),&quot;;&quot;,&quot;&quot;))</expression>
    </formulas>
    <formulas>
        <name>SingleSelectedValueID</name>
        <dataType>String</dataType>
        <expression>LEFT({!SingleSelectedValue}, FIND(&quot;:&quot;, {!SingleSelectedValue})-1)</expression>
    </formulas>
    <formulas>
        <name>SingleSelectedValueName</name>
        <dataType>String</dataType>
        <expression>RIGHT({!SingleSelectedValue}, LEN({!SingleSelectedValue})-FIND(&quot;:&quot;, {!SingleSelectedValue}))</expression>
    </formulas>
    <formulas>
        <name>UpdateSelectedValues</name>
        <dataType>String</dataType>
        <expression>RIGHT({!SelectedValues}, LEN({!SelectedValues})-LEN({!SingleSelectedValue})-1)</expression>
    </formulas>
