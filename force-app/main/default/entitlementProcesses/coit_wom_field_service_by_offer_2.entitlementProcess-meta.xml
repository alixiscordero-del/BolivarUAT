<?xml version="1.0" encoding="UTF-8"?>
<EntitlementProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <SObjectType>WorkOrder</SObjectType>
    <active>true</active>
    <description>Used for all work orders whose work type has a scheduling model by offer</description>
    <entryStartDateField>WorkOrder.CreatedDate</entryStartDateField>
    <exitCriteriaFilterItems>
        <field>WorkOrder.IsClosed</field>
        <operation>equals</operation>
        <value>true</value>
    </exitCriteriaFilterItems>
    <milestones>
        <milestoneName>Esperando por Candidatos (CoIT WOM)</milestoneName>
        <minutesToComplete>6</minutesToComplete>
        <timeTriggers>
            <actions>
                <name>CoIT_WOM_Update_Waiting_Candidates_Stats</name>
                <type>FieldUpdate</type>
            </actions>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Minutes</workflowTimeTriggerUnit>
        </timeTriggers>
        <timeTriggers>
            <actions>
                <name>CoIT_WOM_Update_Waiting_Candidates_Stats</name>
                <type>FieldUpdate</type>
            </actions>
            <timeLength>-3</timeLength>
            <workflowTimeTriggerUnit>Minutes</workflowTimeTriggerUnit>
        </timeTriggers>
        <useCriteriaStartTime>false</useCriteriaStartTime>
    </milestones>
    <milestones>
        <milestoneName>Esperando por Agendamiento</milestoneName>
        <minutesToComplete>7</minutesToComplete>
        <useCriteriaStartTime>false</useCriteriaStartTime>
    </milestones>
    <milestones>
        <criteriaBooleanFilter>1 OR 2</criteriaBooleanFilter>
        <milestoneCriteriaFilterItems>
            <field>WorkOrder.Status</field>
            <operation>equals</operation>
            <value>Dispatched</value>
        </milestoneCriteriaFilterItems>
        <milestoneCriteriaFilterItems>
            <field>WorkOrder.Status</field>
            <operation>equals</operation>
            <value>Travel</value>
        </milestoneCriteriaFilterItems>
        <milestoneName>Esperando por En Viaje</milestoneName>
        <minutesCustomClass>CoIT_MilestoneCalculator</minutesCustomClass>
        <timeTriggers>
            <actions>
                <name>CoIT_Update_Is_Failed_Travel_Field</name>
                <type>FieldUpdate</type>
            </actions>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Minutes</workflowTimeTriggerUnit>
        </timeTriggers>
        <useCriteriaStartTime>true</useCriteriaStartTime>
    </milestones>
    <milestones>
        <milestoneCriteriaFilterItems>
            <field>WorkOrder.Status</field>
            <operation>equals</operation>
            <value>Travel</value>
        </milestoneCriteriaFilterItems>
        <milestoneName>Esperando por En Progreso</milestoneName>
        <minutesCustomClass>CoIT_MilestoneCalculator</minutesCustomClass>
        <timeTriggers>
            <actions>
                <name>Coit_Update_is_failed_in_Progress</name>
                <type>FieldUpdate</type>
            </actions>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Minutes</workflowTimeTriggerUnit>
        </timeTriggers>
        <useCriteriaStartTime>true</useCriteriaStartTime>
    </milestones>
    <milestones>
        <milestoneCriteriaFilterItems>
            <field>WorkOrder.Status</field>
            <operation>equals</operation>
            <value>In Progress</value>
        </milestoneCriteriaFilterItems>
        <milestoneName>Esperando por Completado</milestoneName>
        <minutesCustomClass>CoIT_MilestoneCalculator</minutesCustomClass>
        <timeTriggers>
            <actions>
                <name>Coit_Update_Is_Failed_Completed</name>
                <type>FieldUpdate</type>
            </actions>
            <timeLength>0</timeLength>
            <workflowTimeTriggerUnit>Minutes</workflowTimeTriggerUnit>
        </timeTriggers>
        <useCriteriaStartTime>true</useCriteriaStartTime>
    </milestones>
</EntitlementProcess>
